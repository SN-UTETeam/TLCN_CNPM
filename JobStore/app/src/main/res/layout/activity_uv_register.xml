<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resgiter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.spkt.nguyenducnguu.jobstore.Recruiter.activities.NTDRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/appcolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgv_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_back_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="Đăng ký - Ứng viên"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/appcolor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=" Thông tin đăng ký"
                    android:textColor="@color/appcolor"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/appcolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/txt_Email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/edt_custom"
                    android:hint="Nhập email đăng ký"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/txt_Password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/edt_custom"
                    android:hint="Nhập mật khẩu (> 5 ký tự)"
                    android:inputType="textPassword"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/txt_ConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/edt_custom"
                    android:hint="Nhập lại mật khẩu (> 5 ký tự)"
                    android:inputType="textPassword"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/appcolor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=" Thông tin cá nhân"
                    android:textColor="@color/appcolor"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/appcolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/txt_FullName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/edt_custom"
                    android:hint="Nhập họ tên của bạn"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_BirthDay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/edt_custom"
                    android:focusable="false"
                    android:hint="Chọn ngày sinh của bạn"
                    android:inputType="textCapWords"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_Gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edt_custom"
                    android:focusable="false"
                    android:hint="Chọn giới tính của bạn"
                    android:inputType="textCapWords"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txt_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edt_custom"
                    android:gravity="center|top|left"
                    android:hint="Giới thiệu về bản thân"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="2000"
                    android:maxLines="10"
                    android:scrollHorizontally="false"
                    android:textSize="15dp" />/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/appcolor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=" Thông tin chuyên môn"
                    android:textColor="@color/appcolor"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/appcolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txt_Tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_custom"
                    android:gravity="center|top|left"
                    android:hint="Nhập thẻ Tag để NTD có thể tìm thấy bạn"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLength="2000"
                    android:maxLines="10"
                    android:scrollHorizontally="false"
                    android:textSize="15dp" />/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <mabbas007.tagsedittext.TagsEditText
                    android:id="@+id/txt_WorkPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/edt_custom"
                    android:focusable="false"
                    android:hint="Chọn nơi bạn có thể làm việc"
                    android:maxLength="2000"
                    android:maxLines="10"
                    android:textSize="15dp"
                    app:allowSpaceInTag="true"
                    app:tagsBackground="@drawable/square"
                    app:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
                    app:tagsCloseImageRight="@drawable/tag_close"
                    app:tagsTextColor="@color/white"
                    app:tagsTextSize="10sp" />

                <Button
                    android:id="@+id/btn_AddWorkPlace"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_plus"
                    android:text="@string/fa_plus"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <mabbas007.tagsedittext.TagsEditText
                    android:id="@+id/txt_WorkType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/edt_custom"
                    android:focusable="false"
                    android:hint="Chọn loại hình công việc bạn mong muốn"
                    android:maxLength="2000"
                    android:maxLines="10"
                    android:textSize="15dp"
                    app:allowSpaceInTag="true"
                    app:tagsBackground="@drawable/square"
                    app:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
                    app:tagsCloseImageRight="@drawable/tag_close"
                    app:tagsTextColor="@color/white"
                    app:tagsTextSize="10sp" />

                <Button
                    android:id="@+id/btn_AddWorkType"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_plus"
                    android:text="@string/fa_plus"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <mabbas007.tagsedittext.TagsEditText
                    android:id="@+id/txt_Career"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/edt_custom"
                    android:focusable="false"
                    android:hint="Chọn ngành nghề của bạn"
                    android:maxLength="2000"
                    android:maxLines="10"
                    android:textSize="15dp"
                    app:allowSpaceInTag="true"
                    app:tagsBackground="@drawable/square"
                    app:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
                    app:tagsCloseImageRight="@drawable/tag_close"
                    app:tagsTextColor="@color/white"
                    app:tagsTextSize="10sp" />

                <Button
                    android:id="@+id/btn_AddCareer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_plus"
                    android:text="@string/fa_plus"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <mabbas007.tagsedittext.TagsEditText
                    android:id="@+id/txt_Level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/edt_custom"
                    android:focusable="false"
                    android:hint="Chọn trình độ của bạn"
                    android:maxLength="2000"
                    android:maxLines="10"
                    android:textSize="15dp"
                    app:allowSpaceInTag="true"
                    app:tagsBackground="@drawable/square"
                    app:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
                    app:tagsCloseImageRight="@drawable/tag_close"
                    app:tagsTextColor="@color/white"
                    app:tagsTextSize="10sp" />

                <Button
                    android:id="@+id/btn_AddLevel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_plus"
                    android:text="@string/fa_plus"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <mabbas007.tagsedittext.TagsEditText
                    android:id="@+id/txt_Experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/edt_custom"
                    android:focusable="false"
                    android:hint="Chọn kinh nghiệm của bạn"
                    android:maxLength="2000"
                    android:maxLines="10"
                    android:textSize="15dp"
                    app:allowSpaceInTag="true"
                    app:tagsBackground="@drawable/square"
                    app:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
                    app:tagsCloseImageRight="@drawable/tag_close"
                    app:tagsTextColor="@color/white"
                    app:tagsTextSize="10sp" />

                <Button
                    android:id="@+id/btn_AddExperience"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_plus"
                    android:text="@string/fa_plus"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp">

                <mabbas007.tagsedittext.TagsEditText
                    android:id="@+id/txt_Salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/edt_custom"
                    android:focusable="false"
                    android:hint="Chọn mức lương bạn mong muốn"
                    android:maxLength="2000"
                    android:maxLines="10"
                    android:textSize="15dp"
                    app:allowSpaceInTag="true"
                    app:tagsBackground="@drawable/square"
                    app:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
                    app:tagsCloseImageRight="@drawable/tag_close"
                    app:tagsTextColor="@color/white"
                    app:tagsTextSize="10sp" />

                <Button
                    android:id="@+id/btn_AddSalary"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_plus"
                    android:text="@string/fa_plus"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/viewgroup_custom"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/ln_WorkExps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <Button
                    android:id="@+id/btn_AddWorkExps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_custom"
                    android:text="Thêm kinh nghiệm làm việc"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/edt_custom"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/ln_Diplomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <Button
                    android:id="@+id/btn_AddDiplomas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_custom"
                    android:text="Thêm bằng cấp"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_CV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="20"
                    android:background="@drawable/edt_custom"
                    android:focusable="false"
                    android:hint="Chọn CV của bạn"
                    android:inputType="textCapWords"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/imgv_RemoveCV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/appcolor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=" Thông tin liên hệ"
                    android:textColor="@color/appcolor"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/appcolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_Phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/edt_custom"
                    android:hint="Nhập số điện thoại của bạn"
                    android:inputType="phone"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_FacebookURL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/edt_custom"
                    android:hint="Nhập trang Facebook của bạn (nếu có)"
                    android:inputType="textUri"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_Address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/edt_custom"
                    android:hint="Địa chỉ hiện tại của bạn"
                    android:inputType="textCapWords"
                    android:textSize="15dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_Register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/btn_custom"
                android:text="Đăng ký"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
