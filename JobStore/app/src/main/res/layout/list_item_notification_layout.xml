<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark1"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_Key"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/txt_UserId"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/txt_WorkInfoKey"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/imgv_Avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/img_avatar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[VNG] Tuyển Android Developer"
            android:textColor="@color/appcolor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Đức Ngưu đã ứng tuyển vào bài đăng của bạn."
            android:textColor="@color/appcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left">

                <TextView
                    android:id="@+id/txt_icon1"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/fa_clock"
                    android:textColor="@color/dark1" />

                <TextView
                    android:id="@+id/txt_SendTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="31/10/2017"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>