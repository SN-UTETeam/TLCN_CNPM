<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/appcolor"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_headerNav"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <ImageView
            android:id="@+id/img_CoverPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/diagonallayout_background" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_Avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/avatar_male"
            app:border_color="@android:color/black" />

        <TextView
            android:id="@+id/txt_AdminName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/img_Avatar"
            android:layout_below="@+id/img_Avatar"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:text="-- Chưa cập nhật --"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_AdminName"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txt_AdminName"
            android:layout_marginBottom="8dp"
            android:gravity="left"
            android:text="-- Chưa cập nhật --"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>