<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spkt.nguyenducnguu.jobstore.Candidate.fragments.UVJobAppliedFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_WorkInfoSaved"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clipToPadding="false"
        android:paddingTop="?attr/actionBarSize"
        android:scrollbars="none">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ln_filter"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/appcolor"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <EditText
                android:id="@+id/txt_Query"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cursorVisible="false"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:drawablePadding="15dp"
                android:hint="TÃ¬m nhanh"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:lines="1"
                android:background="@null"
                android:textColorHighlight="@color/appcolor"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/txt_NumberResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0/0"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>