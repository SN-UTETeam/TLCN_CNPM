<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/appcolor"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_UV_headerNav"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <ImageView
            android:id="@+id/img_CoverPhotoUV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/diagonallayout_background"/>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_AvatarUV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            app:border_color="@color/black"
            android:src="@drawable/img_avatar"/>

        <TextView
            android:id="@+id/txt_UVName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/img_AvatarUV"
            android:layout_below="@+id/img_AvatarUV"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="TRẦN ANH SƠN"/>

        <TextView
            android:id="@+id/txt_EmailUV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_UVName"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/img_AvatarUV"
            android:layout_marginBottom="8dp"
            android:gravity="left"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text="sontrananh.fit@gmail.com"/>
    </RelativeLayout>

</RelativeLayout>