<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/appcolor"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:src="@color/white"
        app:border_color="@color/black" />

    <TextView
        android:id="@+id/id_CompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_image"
        android:layout_below="@+id/profile_image"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:text="Company SNTeam.Com"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_CompanyName"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/id_CompanyName"
        android:layout_marginBottom="8dp"
        android:gravity="left"
        android:text="jobstore.ad@gmail.com"
        android:textColor="#fff"
        android:textSize="14sp" />
</RelativeLayout>